<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:scene="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"

    android:id="@+id/main">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appBarLayout01">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.Toolbar

                    android:elevation="2dp"
                    android:background="?attr/ToolbarBG"
                    android:theme="@style/toolbar_theme"
                    android:fitsSystemWindows="true"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/toolbar"

                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true">

                </android.support.v7.widget.Toolbar>
            </RelativeLayout>

            <com.jianyiclub.jianzhi.view.MyView
                android:id="@+id/myView"
                android:layout_alignParentRight="true"
                android:layout_width="50dp"
                android:layout_height="50dp" />
        </RelativeLayout>



    </android.support.design.widget.AppBarLayout>




    <RelativeLayout
        android:id="@+id/relativeLayout23"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appBarLayout01"
        android:layout_alignParentStart="true">
        <FrameLayout
            android:orientation="vertical"
            android:id="@+id/zhihu_daily"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true">


        </FrameLayout>
    </RelativeLayout>







</RelativeLayout>