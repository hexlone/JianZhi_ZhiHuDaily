<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="80dp">
    <android.support.v7.widget.CardView
        android:stateListAnimator="@animator/cardview_anim"
        android:foreground="?attr/selectableItemBackground"
        android:id="@+id/recycler_card"
        android:layout_width="340dp"
        android:layout_height="70dp"
        app:cardElevation="0.1dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/card_imageView01"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="12dp" />
            <TextView
                android:id="@+id/card_textView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/card_imageView01"
                android:layout_marginStart="10dp" />
            <!--
            <TextView
                android:text="已读"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:paddingLeft="6dp"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:paddingRight="3dp"
                android:background="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/card_imageView01"
                android:layout_alignParentEnd="true" />

            -->




        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>